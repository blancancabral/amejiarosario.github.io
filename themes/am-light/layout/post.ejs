            </div>
          <% } %>
        </div>
      </section>
    </aside>
  </div>

  <!-- comments -->
  <a id="comments-section"></a>
  <footer class="row sticky-element--end">
    <div class="col-xs-12">
      <%- partial('_widgets/disqus') %>
    </div>
  </footer>
</article>
